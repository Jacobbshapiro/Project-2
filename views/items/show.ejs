<%- include('../partials/header') %>

<section id="show-page">
    <div>Posted: </div>
    <div><%= item.createdAt %></div>
    <div>Title: </div>
    <div><%= item.title %></div>
    <div>Description: </div>
    <div><%= item.description %></div>
</section>

<br><br><h2>Bids</h2>
<% if (user) { %>
<form id="add-bid-form" method="POST" action="/items/<%= item._id %>/bids">
    <label>Price:</label>
    <textarea name="content"></textarea>
    <input type="submit" value="Add Bid">
</form>
<% } %>
<% if (item.bids.length) { %>
    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Date</th>
          <th>bid</th>
        </tr>
      </thead>
      <tbody>
        <% let total = 0 %>
        <% item.bids.forEach(function(b) { %>
          <% total += b.rating %>
          <tr>
            <td class="bid-user"><img alt="avatar" src="<%= r.userAvatar %> "referrerpolicy="no-referrer" ><%= r.userName %></td>
            <td><%= b.createdAt.toLocaleDateString() %></td>
            <td><%= b.content %></td>
          </tr>
        <% }); %>
        <tr>
          <td colspan="3"></td>
          <td><strong><%= (total / item.bids.length).toFixed(1) %></strong></td>
        </tr>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Bids Yet</h5>
  <% } %>

<%- include('../partials/footer') %>